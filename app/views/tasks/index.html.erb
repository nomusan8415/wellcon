<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Device</th>
      <th>Name</th>
      <th>Start time</th>
      <th>Stop time</th>
      <th>Comment</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.device_id %></td>
        <td><%= task.name %></td>
        <td><%= task.start_time %></td>
        <td><%= task.stop_time %></td>
        <td><%= task.comment %></td>
        <td><%= link_to 'Show', task, :class => 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-info btn-xs'%></td>
        <td><%= link_to 'Destroy', task, 
			method: :delete, 
			data: { confirm: 'Are you sure?' },
			:class => 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path ,class:"btn btn-primary"%>
